# Clerk Authentication - Get these from your Clerk Dashboard
# The default Clerk URLs can usually be left as they are.
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY
NEXT_PUBLIC_CLERK_API_URL=https://api.clerk.com
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/
CLERK_WEBHOOK_SIGNING_SECRET=whsec_YOUR_WEBHOOK_SIGNING_SECRET

# Database
# Get your connection string from your CockroachDB dashboard
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=verify-full"

# Cloudinary (or your chosen image hosting service)
# Get these from your Cloudinary Dashboard under "Programmable Media" settings
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="YOUR_CLOUDINARY_CLOUD_NAME"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="YOUR_CLOUDINARY_UPLOAD_PRESET"

# Stripe - Get these from your Stripe Dashboard in Developer -> API keys
# Ensure you are using TEST MODE keys for development.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET

# Frontend Store URL
# This is the URL of your deployed CUSTOMER-FACING application.
# It's used for CORS (Cross-Origin Resource Sharing) to allow communication.
FRONTEND_STORE_URL=https://your-customer-store-name.vercel.app